<h1>Labels List</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Details</th>
    <th>Modify</th>
    <th>Delete</th>
  </tr>

<% @labels.each do |label| %>
  <tr>
    <td><%= label.name.humanize %></td>
    <td><%= link_to 'Show', label %></td>
    <td><%= link_to 'Edit', edit_label_path(label) %></td>
    <td><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure? (this action has been disabled)' } %></td>
  </tr>
<% end %>
</table>

